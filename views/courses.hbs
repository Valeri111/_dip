{{#if courses.length}}
{{#each courses}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}" class="card-img">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price card-time">{{price}} ч</p>
      </div>
      <div class="card-action actions">
        <a href="{{titlehref}}" target="_blank" class="card-link">Открыть курс</a>
        {{#if @root.isAuth}}
          {{#if @root.user.isAdmin}}
          <a href="/courses/{{id}}/edit?allow=true" class="card-link">Редактировать</a>
          
          {{/if}}
          <form action="/card/add" method="POST"></form>
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <input type="hidden" name="id" value="{{id}}">
            <button type="submit" class="btn btn-primary">пройти</button>
          </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p class="nothing">Курсов пока нет</p>
{{/if}}