<div class="myCourses-container">
  <h1 class="title">Мои курсы</h1>

  <div id="card">
  {{#if courses.length}}
    <table>
      <thead>
        <tr class="table-row">
          <th class="table-title large-text">Название</th>
          <th class="table-title large-text">Действия</th>
        </tr>
      </thead>
      <tbody>
        
        {{#each courses}}
        <tr class="table-row">
          <td class="table-description medium-text">
            {{title}}
            <p>Продолжительность прохождения курса: {{price}} ч</p>
            
          </td>
          <td class="table-description medium-text">
            <div class="table-btns">
              <a href="{{titlehref}}" target="_blank" class="card-link medium-text">Открыть курс</a>
            </div>
            <div class="table-btns">
              <button class="btn btm-small js-remove"  data-id="{{id}}"
            data-csrf="{{@root.csrf}}">Удалить</button>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    
  {{else}}
    <p class="nothing large-text">У вас нет курсов </p>
  {{/if}}
  </div>
</div>